
<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs')%>
<body>
    <%- include('partials/header.ejs')%>
    <main class="main-list">
        <section class="main-buttons-list">
            <article class="filter-button-list">
                <a href="#"><i class="fas fa-sliders-h"></i> Filtrar</a>
            </article>
            <article class="order-button-list">
                <a href="#"><i class="fas fa-sort-alpha-down"></i> Ordenar</a>
            </article>
        </section>
        <section class="main-buttons-bottom-list">
            <article class="routes-list">
                <a href="#">Buscaste</a>
                <i class="fas fa-chevron-right"></i>
                <a href="#"><%= palabra  %></a>
            </article>
            <article class="order-list">
                <p> Ordernar por </p>
                <form action="/" method="GET">
                    <button type="submit"> Más relevantes <i class="fas fa-chevron-down"></i></button>
                </form>
            </article>
        </section>
        <section class="filters-bar-list">
            <article class="categories-bar-list">
                <h4> Categorías </h4>
                <ul class="categories-list">
                    <li><a href="#"> Anteojos de Sol </a></li>
                    <li><a href="#"> Anteojos con Aumento </a></li>
                    <li><a href="#"> Anteojos con Filtro Luz Azul </a></li>
                    <li><a href="#"> Estuches </a></li>
                    <li><a href="#"> Cristales de Repuesto </a></li>
                    <li><a href="#"> Otros </a></li>
                </ul>
            </article>
            <article class="brands-bar-list">
                <h4> Marca </h4>
                <ul class="brands-list">
                    <li><a href="#"> Vulk </a></li>
                    <li><a href="#"> Ray-Ban </a></li>
                    <li><a href="#"> Rusty </a></li>
                    <li><a href="#"> Infinit </a></li>
                </ul>
            </article>
            <article class="price-list">
                <h4> Precio </h4>
                <ul class="prices-list">
                    <li><a href="#"> Hasta $ 20.000 </a></li>
                    <li><a href="#"> $20.000 a $35.000 </a></li>
                    <li><a href="#"> Más de $35.000 </a></li>
                </ul>
                <form class="price-form-list" action="/" method="GET">
                    <div class="min-input-list">
                        <label for="minimo"></label>
                        <input type="number" name="min" id="minimo" placeholder="Mínimo">
                    </div>
                    <p> - </p>
                    <div class="max-input-list">
                        <label for="maximo"></label>
                        <input type="number" name="max" id="maximo" placeholder="Máximo">
                    </div>
                    <div class="send-button-list">
                        <button type="submit"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </form>
            </article>
        </section>
        <section class="products-list">
            <% resultadoBusqueda.forEach(i => { %>
                <% if (resultadoBusqueda.length != 0) { %>
                <article>
                    <div class="img-products-list">
                        <a href="/products/detail/<%= i.id %>"><img src= "/img/products/<%=i.img%>" alt="Lentes" class="img-lentes"></a>
                        <i class="fas fa-chevron-left"></i>
                        <i class="fas fa-chevron-right"></i>
                        <i class="far fa-heart"></i>
                    </div>
                    <div class="products-details-list">
                        <a href="/products/detail/<%= i.id %>">
                            <p class="product-price-list"><%= i.price %></p>
                            <h4 class="product-name-list"><%= i.name %></h4>
                            <p class="product-shipments-list">Envios gratis!</p>
                        </a>
                    </div>
                </article>
                <% } else { %> 
                    <article>                        
                        <div class="products-details-list"> 
                                <p class="product-shipments-list">No hay productos relacionados con tu busqueda</p>
                        </div>
                    </article>
                    <% } %>
            <% }); %>
        </section>
    </main>
    <%- include('partials/footer.ejs')%>
</body>
</html>