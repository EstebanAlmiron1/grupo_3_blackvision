<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs')%>
<body>
    <%- include('partials/header.ejs')%>
    <main class="main-list">
        <h2 class="user-list-title">Lista de usuarios:</h1>
        <section class="user-list">
            <% user.forEach(i => { %>
                <article>
                    <div class="img-user-list">
                        <a href="/user/profile/<%= i.id %>"><img src= "/img/users/<%= i.img %>" alt="avatar" class="img-lentes"></a>
                        <i class="fas fa-chevron-left"></i>
                        <i class="fas fa-chevron-right"></i>
                        <i class="far fa-heart"></i>
                    </div>
                    <div class="user-details-list">
                        <a href="/user/profile/<%= i.id %>">
                            <h4 class="product-name-list"><%= i.first_name %></h4>
                            <p class="product-price-list"><%= i.last_name %></p>
                            <p class="product-price-list"><%= i.birthdate %></p>
                            <p class="product-price-list"><%= i.address %></p>
                            <p class="product-price-list"><%= i.mail %></p>
                        </a>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>
    <%- include('partials/footer.ejs')%>
</body>
</html>