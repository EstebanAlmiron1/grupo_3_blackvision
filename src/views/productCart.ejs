<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs')%>
<body>
    <%- include('partials/header.ejs')%>
    <main>
        <section class="start-route">
            <div class="route">
                <p>Inicio > Carrito de compras</p>
            </div>
        </section>
        <h3 class="cart">CARRITO DE COMPRAS</h3>
        <section class="selected">
                
        </section>
        <section class="resume">
            <h4> <i class="fas fa-store"></i> RESUMEN DE COMPRA</h4>
            <div class="subtotal">
                <P>Subtotal</P>
                <p id="subtotal"></p>
            </div>
            <div class="total">
                <p>Total</p>
                <P id="total"></P>
            </div>
            <div class="lastStep">
                <ul>
                    <li class="shipping">
                        <div>
                            <button type="submit">CALCULAR ENVIO <i class="fas fa-shipping-fast"></i> </button>
                        </div>
                    </li>
                    <li class="discount">
                        <div class="desc-buttom">    
                            <input type="text" id="cupon" placeholder="Ingresar descuento "><i class="fas fa-tag"></i>
                            <label for="cupon"></label>
                        </div>
                    </li>
                    <li class="finalize">
                        <form class="finalizar-button" action="/">
                            <button type="submit">FINALIZAR COMPRA</button>
                        </form>
                    </li>
                </ul>
            </div>
        </section>
    </main>
    <%- include('partials/footer.ejs')%>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/cart.js"></script>    
</body>
</html>